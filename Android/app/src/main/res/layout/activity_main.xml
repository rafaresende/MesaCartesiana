<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.necromato.app.mesacartesiana.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/principal"
    android:layout_margin="8dp">

    <Button
        android:id="@+id/Y_neg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_notclicked"
        android:text="Y-"
        app:layout_constraintLeft_toLeftOf="@+id/origin"
        app:layout_constraintTop_toBottomOf="@+id/origin" />

    <EditText
        android:id="@+id/vel"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginRight="28dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"
        android:text="1.0"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/enviarCoord"
        android:layout_width="32dp"
        android:layout_height="125dp"
        android:text="Enviar"
        android:textDirection="firstStrong"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Atual"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/xAtual"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/xAtual" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Desejada"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/xDesejado"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/xDesejado"
        app:layout_constraintHorizontal_bias="0.51" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        app:layout_constraintTop_toTopOf="@+id/xAtual"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/xAtual"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.571"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView8"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="velocidade"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/vel"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/vel"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/enviarCoord"
        app:layout_constraintHorizontal_bias="0.375" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="Y"
        app:layout_constraintBottom_toBottomOf="@+id/yAtual"
        app:layout_constraintLeft_toLeftOf="@+id/textView4"
        app:layout_constraintRight_toRightOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/yAtual"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/yDesejado"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/xDesejado"
        app:layout_constraintRight_toRightOf="@+id/xDesejado"
        app:layout_constraintTop_toBottomOf="@+id/xDesejado" />

    <EditText
        android:id="@+id/xDesejado"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintRight_toLeftOf="@+id/enviarCoord"
        android:layout_marginRight="30dp" />

    <TextView
        android:id="@+id/xAtual"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:maxLines="1"
        android:textAlignment="center"
        app:layout_constraintRight_toLeftOf="@+id/xDesejado"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/yAtual"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:maxLines="1"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/xAtual"
        app:layout_constraintRight_toRightOf="@+id/xAtual"
        app:layout_constraintTop_toBottomOf="@+id/xAtual"
        android:background="@drawable/border"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Coordenada"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/X_pos"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_notclicked"
        android:text="X+"
        app:layout_constraintBottom_toTopOf="@+id/Y_plus"
        app:layout_constraintLeft_toRightOf="@+id/origin"
        app:layout_constraintTop_toBottomOf="@+id/Y_plus"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/origin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_notclicked"
        android:text="O"
        app:layout_constraintLeft_toRightOf="@+id/X_neg"
        app:layout_constraintTop_toBottomOf="@+id/Y_plus" />

    <Button
        android:id="@+id/Y_plus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_notclicked"
        android:text="Y+"
        app:layout_constraintRight_toRightOf="@+id/origin"
        app:layout_constraintTop_toBottomOf="@+id/yAtual" />

    <Button
        android:id="@+id/X_neg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_notclicked"
        android:text="X-"
        app:layout_constraintBottom_toTopOf="@+id/X_pos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Y_plus"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_notclicked"
        android:text="PARAR"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vel" />

</android.support.constraint.ConstraintLayout>
